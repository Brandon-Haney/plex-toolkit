{
  "manifest_version": 3,
  "name": "Plex Toolkit",
  "version": "1.0.0",
  "description": "Enhance your Plex experience with Picture-in-Picture, auto intro/credit skipper, and more!",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Plex Toolkit Settings",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://app.plex.tv/*", "*://*/web/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
